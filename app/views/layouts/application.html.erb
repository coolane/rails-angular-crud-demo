<!DOCTYPE html>
<html ng-app="raCrudDemo">
<head>
  <title>RailsAngularCrudDemo</title>
  <%= stylesheet_link_tag '//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css',
                          'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag '//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js',
                          'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag '//ajax.googleapis.com/ajax/libs/angularjs/1.2.19/angular.min.js',
                             'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  <!-- Include the controller specific script -->
  <%= javascript_include_tag "/assets/#{controller_name}" %>

  <%= csrf_meta_tags %>
</head>
<body>

<%= yield %>


</body>
</html>
